<configs>

<remove xpath="//crafting_skill[@name='craftingBlades']"/>

<insertAfter xpath="//crafting_skill[@name='craftingKnuckles']">
	<crafting_skill name="craftingBlades" max_level="75" parent="attCrafting" name_key="craftingBladesName" desc_key="craftingBladesDesc" long_desc_key="craftingBladesLongDesc" icon="ui_game_symbol_knife">

		<display_entry item="meleeWpnBladeT0BoneKnife" has_quality="true" unlock_level="1,2,4,6,8,10" />

		<display_entry icon="meleeWpnBladeT1HuntingKnife" name_key="Hunting Knives" has_quality="true" unlock_level="11,15,19,23,27,31" >
			<unlock_entry item="meleeWpnBladeT1HuntingKnife,M9_Bayonet" unlock_tier="1" recipes="meleeWpnBladeT1HuntingKnife,M9_Bayonet" />
		</display_entry>
		
		<display_entry icon="meleeWpnBladeT3Machete" name_key="Short Swords" has_quality="true" unlock_level="25,30,35,40,45,50" >
			<unlock_entry item="meleeWpnBladeT3Machete,NobleShortSword" unlock_tier="1" recipes="meleeWpnBladeT3Machete,NobleShortSword" />
		</display_entry>
		
		<display_entry icon="NobleKatanaSword" name_key="Long Swords" has_quality="true" unlock_level="39,45,51,57,63,75" >
			<unlock_entry item="NobleKatanaSword" unlock_tier="1" recipes="NobleKatanaSword" />
		</display_entry>

		<effect_group>
			<passive_effect name="RecipeTagUnlocked" operation="base_set" level="1,75" value="1" tags="meleeWpnBladeT0BoneKnife"/>
			<passive_effect name="RecipeTagUnlocked" operation="base_set" level="11,75" value="1" tags="meleeWpnBladeT1HuntingKnife,M9_Bayonet"/>
			<passive_effect name="RecipeTagUnlocked" operation="base_set" level="25,75" value="1" tags="meleeWpnBladeT3Machete,NobleShortSword"/>
			<passive_effect name="RecipeTagUnlocked" operation="base_set" level="39,75" value="1" tags="NobleKatanaSword"/>
			
			<passive_effect name="CraftingTier" operation="base_add" level="2,4,6,8,10,75" value="1,2,3,4,5,5" tags="meleeWpnBladeT0BoneKnife"/>
			<passive_effect name="CraftingTier" operation="base_add" level="15,19,23,27,31,75" value="1,2,3,4,5,5" tags="meleeWpnBladeT1HuntingKnife,M9_Bayonet"/>
			<passive_effect name="CraftingTier" operation="base_add" level="30,35,40,45,50,75" value="1,2,3,4,5,5" tags="meleeWpnBladeT3Machete,NobleShortSword"/>
			<passive_effect name="CraftingTier" operation="base_add" level="45,51,57,63,75" value="1,2,3,4,5" tags="NobleKatanaSword"/>
		</effect_group>
	</crafting_skill>
</insertAfter>

