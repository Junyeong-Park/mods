				<sprite name="scrolloverflowmask" depth="2" pos="0,0" sprite="menu_empty" width="486" height="689" color="255,255,255,1" on_press="true"/>
			</rect>
		</rect>
	</append>
	
	<!-- // Vehicle Storage Window Conversion -->
	<set xpath="/windows/window[@name='windowVehicleStorage']/rect[@name='content']/scrollview[@name='scrollview']/grid[@name='queue']/@rows">50</set>
	<set xpath="/windows/window[@name='windowVehicleStorage']/rect[@name='content']/scrollview[@name='scrollview']/grid[@name='queue']/@cols">8</set>
	
	<!--  -->
	<insertAfter xpath="/windows/window[@name='windowVehicleStorage']/rect[@name='content']">
		<rect name="footer" pos="-16,-739">
			<!-- sprite="ui_game_panel_header" -->
			<sprite name="footerbackground" height="46" depth="-1" color="[mediumGrey]" anchor_left="queue,0,-3" anchor_right="queue,1,13" />
		</rect>
	</insertAfter>
	<!-- ********************************* -->
	
</config>