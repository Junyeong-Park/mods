<config>
	
	<!-- ********************************* -->
	<!-- // God Mode Buff Conversion -->
	<set xpath="/buffs/buff[@name='god']/effect_group/passive_effect[@name='CarryCapacity']/@value">200</set>
	<!-- // Steroid Buff Conversion -->
	<set xpath="/buffs/buff[@name='buffDrugSteroids']/effect_group/passive_effect[@name='CarryCapacity']/@value">200</set>

	<!-- // Twitch Buff Conversions -->
	<set xpath="/buffs/buff[@name='twitch_buffPackMule']/effect_group/passive_effect[@name='CarryCapacity']/@value">200</set>
	<set xpath="/buffs/buff[@name='twitch_buffEncumbered']/effect_group/passive_effect[@name='CarryCapacity']/@value">95</set>
	
	<!-- Encumbrance from inventory slots
		This is not tied to the POSITION of the slot you use but the total number of slots used / unlocked. -->
	<set xpath="/buffs/buff[@name='buffEncumberedInv']/effect_group/triggered_effect[@operation='multiply']/@value">0.001</set>
