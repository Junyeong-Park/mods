<configs>
		<set xpath="//ruleset/@scale">1.15</set>


		<remove xpath="/window[@name='windowEntering']"/>
		<remove xpath="/window[@name='windowLocation']"/>
		<remove xpath="/window[@name='toolbelt']"/>
		<append xpath="/window_group[@name='compass']">
			<window name="windowLocation" />
		</append>
		
		<append xpath="/window_group[@name='toolbelt']">
		</append>
		
		<setattribute xpath="/window_group[@name='ingameMenu']" name="close_compass_on_open">true</setattribute>
		
		
		
<remove xpath="/xui/ruleset[@name='default']/window_group[@name='compass']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="compass" actionSet="false">
<window name="windowCompass"/>
<window name="windowXpBar"/>
<window name="windowTargetBar" anchor="CenterTop"/>
<window name="onScreenIcons"/>
<window name="HUDLeftStatBars" anchor="LeftBottom"/>
<window name="windowQuestTracker" anchor="RightTop"/>
<window name="windowRecipeTracker" anchor="RightTop"/>
</window_group>
</append>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="toolbelt" actionSet="false">
<window name="windowToolbelt" anchor="CenterBottom"/>
<window name="windowGroupBars" anchor="LeftCenter"/>
<window name="HUDRightStatBars" anchor="RightBottom"/>
</window_group>
</append>

<remove xpath="/xui/ruleset/window_group[@name='vehicle']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="vehicle" controller="XUiC_VehicleWindowGroup" open_backpack_on_open="true" close_compass_on_open="true" defaultSelected="content">
<window name="windowVehicle"/>
<window name="windowNonPagingHeader"/>
<window name="windowToolbelt" anchor="CenterBottom"/>
</window_group>
</append>

<remove xpath="/xui/ruleset[@name='default']/window_group[@name='ingameMenu']"/>
<append xpath="/xui/ruleset[@name='default']">
<window_group name="ingameMenu" close_compass_on_open="true">
<window name="ingameMenu"/>
</window_group>
</append>

</configs>